

<h3> My Friends </h3>

<div class="search-area">
	<h3> search friend </h3>
	<%= form_tag search_friend_path, method: :get, remote: true do %>

		<div class="form-group row">
			<div class="col-sm-9">
				

				<%= text_field_tag :friend_email, params[:stock], placeholder:'email or name', autofocus:true, class: 'form-control form-control-lg' %>
			</div>
			<div class="col-sm-3" id="search-col">
				<%= button_tag type: :submit, class:'btn btn-default' do %>
					<%= fa_icon "search 2x" %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>
<div id='results'>
</div>

<div id="list">
	<%= render :partial => "friends/list" %>

</div>
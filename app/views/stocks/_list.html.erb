<%= render :partial => 'layouts/messages.html'%>

<% if current_user.stocks.any? %>
	<br>
	<div class="row">
		<div class="col-9">
			<table class="table table-bordered table-hover">
			  <thead>
			    <tr>
			      <th scope="col">Ticker</th>
			      <th scope="col">Name</th>
			      <th scope="col">Price</th>
			      <th scope="col">Actions</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% current_user.stocks.each do |stock| %>
			    	<tr>
				      <th><%= stock.ticker %></th>
				      <td><%= stock.name %></td>
				      <td><%= stock.last_price %></td>
				      <td>
				      	<%= link_to "Remove", user_stock_path(stock), method: :delete, data: {confirm: "Are you sure?"},class:"btn btn-xs btn-danger",:remote => true %>
				      </td>
				    </tr>
				 <% end %>
			  </tbody>
			</table>
		</div>
	</div>
<% end %>
